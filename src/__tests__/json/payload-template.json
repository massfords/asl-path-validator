{
  "$id": "https://asl-path-validator.cloud/payload-template.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^.+\\.\\$$": {
      "type":  "string",
      "nullable": true,
      "format": "asl_payload_template"
    },
    "^.+([^$]|[^.]\\$)$": {
      "oneOf": [
        {
          "type": "string",
          "nullable": true
        },
        {
          "$ref": "#"
        }
      ]
    }
  }
}